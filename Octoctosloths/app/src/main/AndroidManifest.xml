<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.octosloths">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/resumary_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Octosloths">
        <activity android:name=".AddNoteActivityVolunteering"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".AddNoteActivityBasic"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".AddNoteActivityAward"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".AddNoteActivityEducation"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".AddNoteActivityExtracurricular"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".DisplayActivityBasic"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".DisplayActivityAward"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".DisplayActivityVolunteering"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".DisplayActivityEducation"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".DisplayActivityExtracurricular"
            android:parentActivityName=".MainActivity"
            android:theme="@style/Theme.Octosloths.NoActionBar"/>
        <activity android:name=".MainActivity"
            android:launchMode="singleTop"
            android:theme="@style/Theme.Octosloths.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>

